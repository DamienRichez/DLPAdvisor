{% extends 'base.html.twig' %}

{% block title %}DLPadvisor{% endblock %}

{% block body %}

{% if isModification %}
Modification de {{ attractions.name }} 
{% else %}
Nouvelle Attraction
{% endif %}

<div class="container">
  <div style="padding-top:50px">
    {{ form_start(form) }}
      {{ form_row(form.name, {'label': 'Nom de l\'attraction:* '}) }}
      {{ form_row(form.imageFile, {'label': 'Télécharger l\'image:* '}) }}
      {{ form_row(form.description, {'label': 'Description de l\'attraction:* '}) }}
      <input type="submit" class="btn btn-success" value="valider">
    {{ form_end(form) }}
  </div>
</div>

{% endblock %}
