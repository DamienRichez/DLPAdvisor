{% extends 'base.html.twig' %}

{% block title %}DLPadvisor{% endblock %}

{% block body %}

{% if isModification %}
Modification de {{ restaurants.nom }} 
{% else %}
Nouveau Restaurant
{% endif %}

<div class="container">
  <div style="padding-top:50px">
    {{ form_start(form) }}
      {{ form_row(form.nom, {'label': 'Nom du restaurant:* '}) }}
      {{ form_row(form.imageFile, {'label': 'Télécharger l\'image:* '}) }}
      {{ form_row(form.description, {'label': 'Description du restaurant:* '}) }}
      <input type="submit" class="btn btn-success" value="valider">
    {{ form_end(form) }}
  </div>
</div>

{% endblock %}
